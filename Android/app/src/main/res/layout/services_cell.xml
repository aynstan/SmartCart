<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Talho"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/service_name"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A servir"
        android:textSize="10sp"
        android:textStyle="italic"
        android:id="@+id/counter1"
        android:gravity="left"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/service_name"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/senha1"
        android:layout_alignEnd="@+id/senha1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:id="@+id/counter2"
        android:text="Prox"
        android:textStyle="italic"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/counter1"
        android:layout_toRightOf="@+id/service_name"
        android:layout_toEndOf="@+id/service_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:textColor="#000000"
        android:textSize="70sp"
        android:gravity="left"
        android:id="@+id/senha1"
        android:layout_below="@+id/counter1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="#000000"
        android:textSize="70sp"
        android:gravity="right"
        android:id="@+id/senha2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/counter2"
        android:layout_toEndOf="@+id/service_name"
        android:layout_alignLeft="@+id/service_name"
        android:layout_alignStart="@+id/service_name" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tirar Senha"
        android:id="@+id/ticket_button"
        android:layout_below="@+id/senha1"
        android:layout_alignRight="@+id/senha2"
        android:layout_alignEnd="@+id/senha2" />


</RelativeLayout>