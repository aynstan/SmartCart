<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.cm.smartcart.Shopping">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="60dp"
        android:divider="#b5b5b5"
        android:dividerHeight="1px"
        android:listSelector="@drawable/list_selector"
        android:layout_above="@+id/shop_totals" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Scan"
        android:id="@+id/scan_button"
        android:background="#2196F3"
        android:textStyle="bold"
        android:textSize="30dp"
        android:onClick="scanCode"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shop_totals"
        android:text="Total:  0.00 â‚¬"
        android:background="#BBDEFB"
        android:textStyle="bold"
        android:gravity="center"
        android:focusable="false"
        android:layout_above="@+id/scan_button"
        android:layout_alignLeft="@+id/scan_button"
        android:layout_alignStart="@+id/scan_button" />

</RelativeLayout>
